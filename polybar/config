[settings]
screenchange-reload = true ; https://www.reddit.com/r/i3wm/comments/6lo0z0/how_to_use_polybar/djvp7ok
fixed-center = true

[bar/mybar]
bottom = true
dock = false
width = 100%
height = 32
offset-x = 0
offset-y = 0
padding = 1

font-0 = Iosevka Term SS12
font-1 = FontAwesome

dim-value = 0.8

modules-left = i3
modules-center = 
modules-right = clock memory cpu

tray-position = right
tray-maxsize = 20
tray-padding = 1

[module/clock]
type = internal/date
interval = 0.5
date = "%a %d %b"
time = "%T"

label = "%date% %time%"

[module/memory]
